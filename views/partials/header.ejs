<% /* --- partials/header.ejs --- */ %>
<header class="shadow-md sticky top-0 z-50">
<nav class="sticky top-0 z-50 nav-bg">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <div class="p-2">
          <input type="checkbox" id="mobile-menu-toggle" class="hidden">
          <label for="mobile-menu-toggle"
            class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white z-50">
            <span class="sr-only">Open main menu</span>
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
              stroke-width="2" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
            <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
              stroke-width="2" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </label>
        </div>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <a href="/"><img class="block h-8 w-auto" src="/images/main/oliveritas.svg" alt="Oliveritas"></a>
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <a href="/"
              class="text-color-a hover:bg-fuchsia-500/75 hover:text-color-c px-3 py-2 rounded-md text-sm font-medium">HOME</a>
            <a href="/products"
              class="text-color-a hover:bg-fuchsia-500/75 hover:text-color-c px-3 py-2 rounded-md text-sm font-medium">PRODUCTS</a>
            <a href="/entity-directory"
              class="text-color-a hover:bg-fuchsia-500/75 hover:text-color-c px-3 py-2 rounded-md text-sm font-medium">PARTNERS</a>
            <a href="/#contact"
              class="text-color-a hover:bg-fuchsia-500/75 hover:text-color-c px-3 py-2 rounded-md text-sm font-medium">CONTACT</a>
              <div class="flex items-center space-x-4">
                <a href="/cart" class="text-color-a hover:bg-fuchsia-500/75 hover:text-color-c px-3 py-2 rounded-md text-sm font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                    </svg>
                    <% if (typeof cartItemCount !== 'undefined' && cartItemCount > 0) { %>
                        <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"><%= cartItemCount %></span>
                    <% } %>
                </a>
            </div>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <div class="ml-3 relative">
          <input type="checkbox" id="user-menu-toggle" class="hidden">
          <label for="user-menu-toggle"
            class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white cursor-pointer"
            aria-expanded="false" aria-haspopup="true">
            <span class="sr-only">Open user menu</span>
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"
              stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </label>
          <div id="user-menu"
            class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-color-B ring-1 ring-black ring-opacity-5 focus:outline-none"
            role="menu" aria-orientation="vertical" aria-labelledby="user-menu-toggle" tabindex="-1">
            <% if (typeof user !== 'undefined' && user) { %>
              <a href="/account/dashboard" class="block px-4 py-2 text-sm text-color-a" role="menuitem" tabindex="-1">My Account</a>
              <a href="/account/orders" class="block px-4 py-2 text-sm text-color-a" role="menuitem" tabindex="-1">Orders</a>
              <form action="/logout" method="POST" class="inline">
                <button type="submit" class="text-gray-600 hover:text-red-700">Logout</button>
              </form>
            <% } else { %>
              <a href="/login" class="block px-4 py-2 text-sm text-color-a" role="menuitem" tabindex="-1">Login</a>
              <a href="/register" class="block px-4 py-2 text-sm text-color-a" role="menuitem" tabindex="-1">Register</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden sm:hidden fixed inset-x-0 bottom-0 bg-gray-800 bg-opacity-75 z-40" id="mobile-menu">

  </div>
</nav>
</header>
